{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "lib": [
      "DOM",
      "ES6"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.tests.ts"
  ]
}
